            <Grid.Background>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="#ED000000" Offset="0" />
                    <GradientStop Color="#ED000000" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Border BorderBrush="Silver" BorderThickness="1" Margin="0,40,0,0" Name="border1">
        </Border>
    </Grid>
    <Window.Background>
        <SolidColorBrush />
    </Window.Background>
</Window>
