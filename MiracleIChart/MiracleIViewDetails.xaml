        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="587" Width="888" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Opacity="1" Loaded="Window_Loaded" ShowInTaskbar="False" Deactivated="Window_Deactivated">
    <Grid Background="{x:Null}">
        
        <Grid Name="grid1" Margin="0,40,0,0">
            <Button Background="#FF414141" BorderBrush="{x:Null}" Content="x" FontFamily="Shruti" Foreground="Red" Height="23" HorizontalAlignment="Right" Margin="0,19,17,0" Name="button1" VerticalAlignment="Top" Width="39" Click="button1_Click" />
            
            <DataGrid AutoGenerateColumns="True" Margin="18,60,17,18" Name="dataGrid1" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFD4D4D4" IsReadOnly="True" CanUserResizeRows="False" RowBackground="#A5000000" HeadersVisibility="Column" FontSize="14" BorderThickness="0" GridLinesVisibility="None" RowHeight="25" LoadingRow="dataGrid1_LoadingRow" MinColumnWidth="100">
